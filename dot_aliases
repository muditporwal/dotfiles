# Reload the shell (i.e. invoke as a login shell)
alias reload="exec $SHELL -l"

# DotFiles Setup
alias dotf='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

# Include custom aliases
[[ -f ~/aliases/.aliases.local ]]       &&        source ~/aliases/.aliases.local
[[ -f ~/aliases/.aliases.navigation ]]  &&   source ~/aliases/.aliases.navigation
[[ -f ~/aliases/.aliases.exercism ]]    &&     source ~/aliases/.aliases.exercism
[[ -f ~/aliases/.localkeys ]]    &&     source ~/aliases/.localkeys
